<header class="header">
    <a href="#test">
        {{> logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="hero">
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input{{id}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <div class="line"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>

{{#with updates}}
<div class="updates">
    <h3 class="updates_title">Recent Updates</h3>

    {{#each list}}
    <div class="upd">
        <img src="https://picsum.photos/32/32" alt="icon" class="upd_img">
        <div>
            <strong class="upd_username">{{nickname}}</strong>
            <p class="upd_description">{{description}}</p>
        </div>
    </div>
    {{/each}}

    {{#with show_all}}
    <a href="{{url}}" class="updates_link">{{text}}</a>
    {{/with}}

</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
    <div class="expirience_badge">{{badge}}</div>

    <h3 class="expirience_title">{{title}}</h3>

    <div class="expirience_list">
        {{#each list}}
        <div class="expirience_item">
            <strong class="expirience_item_name">{{name}}</strong>
            <p class="expirience_item_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}


<footer class="footer" id="test">
    <div>{{> logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">
            {{title}}
        </span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>